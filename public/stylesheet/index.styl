dark = #27466f
little_dark = #345e96
normal = #4076bd
light = #6491cc
invert_text = white
body_background = #89acd9

html, body
  height 100%
  margin 0
  padding 0

a
  &, &:link, &:visited
    color light
    transition .2s
    text-decoration none
  &:hover, &:focus, &:active
    color little_dark
    text-decoration underline

table
  margin 10px 0

body
  background-color body_background

#container
  width 80%
  margin 0 auto
  background-color white
  //min-height 100%
  font-family "mplus-1p-regular", Helvetica, sans-serif
  color dark

#page_header
  background-color normal
  color white
  height 3rem
  padding 0 10px

#brand
  display inline
  line-height 3rem
  margin 0
  padding 0

#user_navbar
  display inline
  ul
    display inline
    padding 0
    margin 0
    float right
    &:after
      clear both
    li
      display inline-block
      height 3rem
      line-height 3rem
      transition .3s
      &:hover
        background-color light
      *
        padding 0 20px
      a
        display inline-block
        width 100%
        height 100%
        padding 0 20px
        &, &:link, &:visited, &:focus, &:active, &:hover
          color white
          text-decoration none

#page_navbar
  display block
  ul
    padding 0
    margin 0
    li
      box-sizing border-box
      display inline-block
      width 33.33%
      background-color little_dark
      height 1.5rem
      line-height 1.5rem
      border-right solid 2px dark
      text-align center
      transition .3s
      &:hover
        background-color light
  a
    display inline-block
    width 100%
    &, &:link, &:visited, &:focus, &:active, &:hover
      color white
      text-decoration none

#city_navbar
  display block
  ul
    padding 0
    margin 0
    background-color normal
    li
      display inline-block
      height 1.5rem
      line-height 1.5rem
      transition .3s
      padding 0 5px
      &:hover
        background-color light
  a
    display inline-block
    &, &:link, &:visited, &:focus, &:active, &:hover
      color white
      text-decoration none

main
  padding 10px

#responses
  list-style-type none
  padding 0

.response
  margin-top 2rem
  header
    span
      margin-right 10px
    .response_id
      box-sizing border-box
      background-color little_dark
      color white
      padding 5px
      border-radius 3px
    form
      display inline
  div
    margin-top 1rem
    margin-left 1rem

.wallet_address
  font-size 200%

.wallet_address_field
  width 300px

.btn
  display inline-block
  border-radius 3px
  padding 10px
  transition .3s
  a&
    text-decoration none
  &.normal
    border solid 1px light
    color light
    background-color white
    &:hover
      border-color little_dark
      color little_dark
  &.important
    color invert_text
    background-color normal
    &:hover
      background-color light
